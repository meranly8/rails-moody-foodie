<h1>New Provision</h1>
<% if @provision.errors.any? %>
    <div id="error_explanation">
    <h2> <%= pluralize(@provision.errors.count, "error") %> prohibited entry from being saved: </h2>
    <ul>
        <% @provision.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    </div>
<% end %>

<%= form_for @provision do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :provision_type, "Provision Type" %><br>
    <%= f.select :provision_type, ["Food", "Drink"], prompt: "Select Type" %><br><br>
    <%= f.label :approx_cals_per_serving, "Approximate Calories per Serving" %><br>
    <%= f.number_field :approx_cals_per_serving, min: 0 %><br><br>
    <%= f.submit %>
<% end %>